{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "make build",
            "type": "shell",
            "command": "cd src/build && make",
        },
        {
            "label": "rotation",
            "type": "shell",
            "command": "src/build/Rotation",
            "args": [
                "--img_cp",
                "img.dat",
                "--ply_cp",
                "ply.dat",
                "--ply",
                "match-plyfile.ply",
                "--img",
                "img/PIC_point1.jpg",
                "--dir",
                "data/test/",
                "--json",
                "data/detection.json",
                "--mode",
                "9",
            ],
        },
        {
            "label": "rotation_cube",
            "type": "shell",
            "command": "src/build/Rotation",
            "args": [
                "--img_cp",
                "img.dat",
                "--ply_cp",
                "ply.dat",
                "--ply",
                "test_cube.ply",
                "--img",
                "img/PIC_point1.jpg",
                "--dir",
                "data/cube/",
                "--json",
                "data/detection_test.json",
                "--mode",
                "9",
            ],
        }

    ],
    "version": "2.0.0"
}